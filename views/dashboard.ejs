<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | URL Shortener</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <h1>URL Shortener Dashboard</h1>
  </header>

  <main>
    <section class="dashboard">
      <h2>Welcome, <%= user.email %></h2>
      <form action="/shorten" method="POST">
        <input type="text" name="originalUrl" placeholder="Enter your URL here..." required>
         <input type="text" name="customAlias" placeholder="Custom short URL (optional)">
        <button type="submit">Shorten URL</button>
      </form>

      <% if (urls && urls.length > 0) { %>
        <table class="url-table">
          <thead>
            <tr>
              <th>Original URL</th>
              <th>Short URL</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach(url => { %>
              <tr>
                <td><a href="<%= url.originalUrl %>" target="_blank"><%= url.originalUrl %></a></td>
                <td><a href="<%= baseUrl %>/<%= url.shortId %>" target="_blank"><%= baseUrl %>/<%= url.shortId %></a></td>
                <td>
                  <form action="/<%= url._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="delete-btn">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p class="no-urls">No URLs yet. Shorten one above!</p>
      <% } %>
    </section>
  </main>

  <footer>
    <p>&copy; <%= new Date().getFullYear() %> URL Shortener</p>
  </footer>

  <script>
    const ws = new WebSocket("ws://localhost:3000");

    ws.onopen = function() {
      console.log("Connected to WebSocket server");
    };

    ws.onmessage = function(event) {
      const data = JSON.parse(event.data);
      alert("Real-time update: " + data.event);
      location.reload(); 
    };

    ws.onclose = function() {
      console.log("WebSocket disconnected");
    };
  </script>
</body>
</html>
